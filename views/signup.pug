extends base

block content 
  main.main  
    .login-form
      h2.heading-secondary.ma-bt-lg Sign up 
       //-   form.form.form--signup(method="POST" action="/api/v1/users/signup")
      form.form.form--signup
        .form__group
          label.form__label(for='username') Username:
          input#username.form__input(type="text" name="name" required)
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', name='email', placeholder='you@example.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', name='password', placeholder='••••••••', required minlength='8')  
        .form__group.ma-bt-md
          label.form__label(for='passwordConfirm') Password Confirm
          input#passwordConfirm.form__input(type='password', name='passwordConfirm', placeholder='••••••••', required minlength='8')  
        .form__group
          button.btn.btn--green(type='submit') Signup
